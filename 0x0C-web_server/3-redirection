#!/usr/bin/env bash
# Configure Nginx

apt update
apt install -y nginx

echo "Holberton School" > /etc/nginx/html/index.html
printf %s "server {
    listen 80 default_server;
    location ^/redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}" > /etc/nginx/sites-available/default

service nginx restart
